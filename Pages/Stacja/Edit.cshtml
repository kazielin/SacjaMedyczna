@page
@model SacjaMedyczna.Pages.Stacja.EditModel


<h1>Edytuj osobę</h1>
<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="daneOs.ID"/>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="daneOs.Imie"></label>
            </div>
            <div class="col-6">
                <input asp-for="daneOs.Imie" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="daneOs.Nazwisko"></label>
            </div>
            <div class="col-6">
                <input asp-for="daneOs.Nazwisko" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="daneOs.Pesel"></label>
            </div>
            <div class="col-6">
                <input asp-for="daneOs.Pesel" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="daneOs.NumerDowodu"></label>
            </div>
            <div class="col-6">
                <input asp-for="daneOs.NumerDowodu" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="daneOs.DataUrodzenia"></label>
            </div>
            <div class="col-6">
                <input asp-for="daneOs.DataUrodzenia" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="daneOs.NumerTelefonu"></label>
            </div>
            <div class="col-6">
                <input asp-for="daneOs.NumerTelefonu" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="daneOs.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="daneOs.Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <input type="submit" value="Edytuj" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Testing" class="btn btn-success form-control">Wróć</a>
            </div>
        </div>
    </form>
</div>


